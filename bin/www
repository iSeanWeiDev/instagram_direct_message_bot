#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('ig-dm-bot:server');
var http = require('http');
var config = require('../config/env');
// var https = require('https');
// var fs = require('fs');
// var path = require('path');

// var privateKey = fs.readFileSync(path.join(__dirname, './ssl/privatekey.pem)'));
// var certificate = fs.readFileSync(path.join(__dirname, './ssl/certification.pem'));



/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || config.server.port);
app.set('port', port);

/**
 * Create HTTP server.
 */
var option = {
  hostname: 'local.metamedias.co'
}

var server = http.createServer(option, app);

/**
 * Create HTTPS server.
 */

//  var server = https.createServer({
//    key: privateKey,
//    cert: certificate
//  }, app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
